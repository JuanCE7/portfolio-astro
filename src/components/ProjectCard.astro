---
interface Props {
  title: string;
  description: string;
  imageUrl?: string;
  className?: string;
  index?: number;
}

const { title, description, imageUrl, className = "", index = 0 } = Astro.props;
---

<div
  class=`bg-white/10 backdrop-blur-lg rounded-lg overflow-hidden shadow-lg transition-transform hover:scale-105 ${className}`
>
  {
    imageUrl && (
      <div class="mb-4">
        <img src={imageUrl} alt={title} class="w-full h-48 object-cover" />
      </div>
    )
  }
  <div class="p-6">
    <h3 class="text-xl font-semibold mb-2">{title}</h3>
    <p class="text-white/80">{description}</p>
  </div>
</div>
