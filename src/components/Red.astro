---
import SocialCard from "./SocialCard.astro";

const phoneNumber = "593987466394";
const defaultMessage = "Hola, me gustar√≠a contactar contigo";
const { t } = Astro.props;

const reds = [
  {
    platform: "Instagram",
    username: "juanito_rex01",
    description: t("socials.instagram.description"),
    icon: "ri:instagram-line",
    url: "https://www.instagram.com/juanito_rex01/",
  },
  {
    platform: "GitHub",
    username: "JuanCE7",
    description: t("socials.github.description"),
    icon: "ri:github-line",
    url: "https://github.com/JuanCE7",
  },
  {
    platform: "LinkedIn",
    username: "Juan Castillo",
    description: t("socials.linkedin.description"),
    icon: "ri:linkedin-line",
    url: "https://www.linkedin.com/in/juan-castillo-181637277/",
  },
  {
    platform: "YouTube",
    username: "Juan Castillo",
    description: t("socials.youtube.description"),
    icon: "ri:youtube-line",
    url: "https://www.youtube.com/@juanfranciscocastilloestre8389",
  },
  {
    platform: "Whatsapp",
    username: "Juan Francisco Castillo Estrella",
    description: t("socials.whatsapp.description"),
    icon: "bi-whatsapp",
    url: `https://wa.me/${phoneNumber}?text=${encodeURIComponent(defaultMessage)}`,
  },
  {
    platform: "Gmail",
    username: "juancastiestrella@gmail.com",
    description: t("socials.gmail.description"),
    icon: "bxl-gmail",
    url: "https://mail.google.com/mail/?view=cm&fs=1&to=juancastiestrella@gmail.com&su=Hola&body=Podemos%20contactarnos%20?",
  },
];
---

<section id="red" class="py-20" data-aos="zoom-out-down">
  <h2
    class="text-3xl font-bold text-center mb-12 transition-transform hover:scale-110 hover:text-primary-900"
  >
    {t("contact.title")}
  </h2>
  <div class="grid grid-cols-1 md:grid-cols-3 gap-8 ">
    {
      reds.map((red) => (
        <SocialCard
          platform={red.platform}
          username={red.username}
          description={red.description}
          icon={red.icon}
          url={red.url}
        />
      ))
    }
  </div>
</section>
