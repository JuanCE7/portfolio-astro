---
const socialLinks = [
  { platform: 'instagram', url: '#', icon: 'ri:instagram-line' },
  { platform: 'github', url: '#', icon: 'ri:github-line' },
  { platform: 'youtube', url: '#', icon: 'ri:youtube-line' },
  { platform: 'facebook', url: '#', icon: 'ri:facebook-line' },
  { platform: 'linkedin', url: '#', icon: 'ri:linkedin-line' },
];
---

<div class="flex gap-4 justify-center">
  {socialLinks.map(({ platform, url, icon }) => (
    <a
      href={url}
      class="text-white hover:text-primary-500 transition-colors"
      target="_blank"
      rel="noopener noreferrer"
    >
      <span class="sr-only">{platform}</span>
      <iconify-icon icon={icon} width="24" height="24"></iconify-icon>
    </a>
  ))}
</div>

<script>
  import 'https://code.iconify.design/iconify-icon/1.0.7/iconify-icon.min.js';
</script>