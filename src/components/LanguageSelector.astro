---
import { languages } from '../i18n/ui';
const currentPath = Astro.url.pathname;
---

<div class="relative inline-block text-left">
  <button
    class="bg-white/10 backdrop-blur-sm text-white px-4 py-2 rounded-full w-full text-left hover:bg-white/20 transition-colors cursor-pointer flex items-center gap-2"
    onclick="document.getElementById('lang-select').classList.toggle('hidden')"
  >
    <!-- Icono visible siempre -->
    <span>🌐</span>

    <!-- Texto solo visible en pantallas medianas en adelante -->
    <span class="hidden md:inline">
      Idioma: {languages[currentPath.split('/')[1]] || 'Seleccionar idioma'}
    </span>
  </button>

  <div
    id="lang-select"
    class="absolute mt-2 w-full bg-white/10 backdrop-blur-sm rounded-lg shadow-lg hidden z-10"
  >
    <div class="flex flex-col">
      {
        Object.entries(languages).map(([lang, label]) => (
          <a
            href={`/${lang}/`}
            class="px-4 py-2 text-white hover:bg-white/20 transition-colors"
          >
            {label}
          </a>
        ))
      }
    </div>
  </div>
</div>
