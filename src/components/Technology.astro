      />
      <TechnologyCard
        name="AWS"
        icon="logos:aws"
        level="Básico"
      />
      <TechnologyCard
        name="Git"
        icon="logos:git-icon"
        level="Avanzado"
      />
      <TechnologyCard
        name="Tailwind"
        icon="logos:tailwindcss-icon"
        level="Avanzado"
      />
