      <TechnologyCard
        name="JavaScript"
        icon="logos:javascript"
        level="Avanzado"
      />
      <TechnologyCard
        name="React"
        icon="logos:react"
        level="Avanzado"
      />
      <TechnologyCard
        name="Node.js"
        icon="logos:nodejs"
        level="Intermedio"
      />
      <TechnologyCard
        name="Python"
        icon="logos:python"
        level="Intermedio"
      />
      <TechnologyCard
        name="TypeScript"
        icon="logos:typescript-icon"
        level="Avanzado"
      />
      <TechnologyCard
        name="Vue.js"
        icon="logos:vue"
        level="Intermedio"
      />
      <TechnologyCard
        name="Docker"
        icon="logos:docker-icon"
        level="Básico"
      />
      <TechnologyCard
        name="MongoDB"
        icon="logos:mongodb-icon"
        level="Intermedio"
      />
      <TechnologyCard
        name="PostgreSQL"
