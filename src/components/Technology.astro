  {
    name: "Express.js",
    icon: "logos:express",
    level: t("skills.level.intermediate"),
  },
  {
    name: "Nest.js",
    icon: "logos:nestjs",
    level: t("skills.level.intermediate"),
  },
  {
    name: "Astro",
    icon: "logos:astro-icon",
    level: t("skills.level.intermediate"),
  },
  {
    name: ".NET",
    icon: "logos:dotnet",
    level: t("skills.level.basic"),
  },
  {
    name: "Angular",
    icon: "logos:angular-icon",
    level: t("skills.level.intermediate"),
