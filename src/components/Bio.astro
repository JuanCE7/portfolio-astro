---
const { t } = Astro.props;
---

<section id="bio" class="py-20">
  <h2
    class="text-3xl font-bold text-center mb-12 transition-transform hover:scale-110"
  >
    {t("about.title")}
  </h2>
  <div class="grid grid-cols-1 lg:grid-cols-3 gap-8" data-aos="zoom-out-down">
    <div
      class="bg-white/10 backdrop-blur-lg rounded-lg p-6 flex flex-col md:flex-row gap-4 items-center md:items-start lg:col-span-3 transition-transform hover:scale-105"
    >
      <div class="w-40 h-40 rounded-full overflow-hidden flex-shrink-0">
        <img
          src="/perfil.jpg"
          alt="FotoPerfil"
          class="w-full h-full object-cover"
        />
      </div>
      <div class="flex flex-col justify-center p-4 text-center md:text-left">
        <h3 class="text-2xl font-semibold">Juan Francisco Castillo Estrella</h3>
        <p class="text-white/70 mt-2">
          {t("about.description")}
        </p>
      </div>
    </div>
    <div
      class="bg-white/10 backdrop-blur-lg rounded-lg p-6 flex flex-col gap-4 items-center text-center transition-transform hover:scale-105"
    >
      <div class="flex flex-col justify-center">
        <h3 class="text-2xl font-semibold">{t("about.gradeOne")}</h3>
        <p class="text-white/70 mt-2">Sep 2013 - Jul 2019</p>
      </div>
      <div class="w-32 h-32 rounded-full overflow-hidden">
        <img
          src="https://www.unitips.mx/staticfiles/landing/images/promos/mesa_de_trabajo_1.png"
          alt="bachillerato"
          class="w-full h-full object-cover"
        />
      </div>
    </div>
    <div
      class="bg-white/10 backdrop-blur-lg rounded-lg p-6 flex flex-col gap-4 items-center text-center transition-transform hover:scale-105"
    >
      <div class="flex flex-col justify-center">
        <h3 class="text-2xl font-semibold">
          {t("about.gradeTwo")}
        </h3>
        <p class="text-white/70 mt-2">May 2020 - Feb 2025</p>
      </div>
      <div class="w-32 h-32 rounded-full overflow-hidden">
        <img
          src="https://merida.anahuac.mx/hs-fs/hubfs/apreu/Blog/2019%20Blog%20APREU/APREU%20Blog%20-%20Abril%2019/dribbble-shot_6.gif?width=800&name=dribbble-shot_6.gif"
          alt="grado"
          class="w-full h-full object-cover"
        />
      </div>
    </div>
    <div
      class="bg-white/10 backdrop-blur-lg rounded-lg p-6 flex flex-col gap-4 items-center text-center transition-transform hover:scale-105"
    >
      <div class="flex flex-col justify-center">
        <h3 class="text-2xl font-semibold">{t("about.gradeThree")}</h3>
        <p class="text-white/70 mt-2">Oct 2024 - Act</p>
      </div>
      <div class="w-32 h-32 rounded-full overflow-hidden">
        <img
          src="https://i.gifer.com/39Cb.gif"
          alt="freelance"
          class="w-full h-full object-cover"
        />
      </div>
    </div>
  </div>
</section>

<section id="experience" class="py-20" data-aos="zoom-out-down">
  <h2
    class="text-3xl font-bold text-center mb-12 transition-transform hover:scale-110"
  >
    {t("experience.title")}
  </h2>

  <div class="space-y-8">
    <!-- Coopmego -->
    <div class="bg-white/10 backdrop-blur-lg rounded-lg p-6">
      <h3 class="text-2xl font-semibold">{t("experience.coopmego.role")}</h3>
      <p class="text-white/70">{t("experience.coopmego.company")}</p>
      <ul class="mt-4 space-y-2 text-white/80">
        <li>• {t("experience.coopmego.task1")}</li>
        <li>• {t("experience.coopmego.task2")}</li>
        <li>• {t("experience.coopmego.task3")}</li>
        <li>• {t("experience.coopmego.task4")}</li>
      </ul>
    </div>

    <!-- UNL -->
    <div class="bg-white/10 backdrop-blur-lg rounded-lg p-6">
      <h3 class="text-2xl font-semibold">{t("experience.unl.role")}</h3>
      <p class="text-white/70">{t("experience.unl.company")}</p>
      <ul class="mt-4 space-y-2 text-white/80">
        <li>• {t("experience.unl.task1")}</li>
        <li>• {t("experience.unl.task2")}</li>
        <li>• {t("experience.unl.task3")}</li>
      </ul>
    </div>

    <!-- Freelance -->
    <div class="bg-white/10 backdrop-blur-lg rounded-lg p-6">
      <h3 class="text-2xl font-semibold">{t("experience.freelance.role")}</h3>
      <p class="text-white/70">{t("experience.freelance.company")}</p>
      <ul class="mt-4 space-y-2 text-white/80">
        <li>• {t("experience.freelance.task1")}</li>
        <li>• {t("experience.freelance.task2")}</li>
        <li>• {t("experience.freelance.task3")}</li>
      </ul>
    </div>
  </div>
</section>
