---

<section id="bio" class="py-20">
  <h2
    class="text-3xl font-bold text-center mb-12 transition-transform hover:scale-110"
    >
    BIO
  </h2>
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
    {
      bios.map((bio, index) => (
        <BioCard
          title={bio.title}
          description={bio.description}
          imageUrl={bio.imageUrl}
          className={bio.className}
          index={index}
        />
      ))
    }
  </div>
</section>
