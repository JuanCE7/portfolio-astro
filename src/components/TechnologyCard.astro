---
interface Props {
  name: string;
  icon: string;
  level: "Básico" | "Intermedio" | "Avanzado";
  index: number;
}

const { name, icon, level, index = 0 } = Astro.props;

const levelColors = {
  Básico: "bg-yellow-500/50",
  Intermedio: "bg-blue-500/50",
  Avanzado: "bg-green-500/50",
};
---

<div
  class="bg-white/10 backdrop-blur-lg rounded-lg p-4 flex flex-col items-center hover:bg-white/20 transition-all duration-300"
  data-aos="zoom-out-down"
  data-aos-delay={index * 100}
>
  <iconify-icon icon={icon} width="48" height="48" class="mb-3"></iconify-icon>
  <h3 class="text-lg font-semibold mb-2">{name}</h3>
  <span class={`${levelColors[level]} px-3 py-1 rounded-full text-sm`}>
    {level}
  </span>
</div>
