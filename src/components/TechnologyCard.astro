---
interface Props {
  name: string;
  icon: string;
  level: 'Básico' | 'Intermedio' | 'Avanzado';
}

const { name, icon, level } = Astro.props;

const levelColors = {
  'Básico': 'bg-yellow-500/20',
  'Intermedio': 'bg-blue-500/20',
  'Avanzado': 'bg-green-500/20'
};
---

<div class="bg-white/10 backdrop-blur-lg rounded-lg p-4 flex flex-col items-center hover:bg-white/20 transition-all duration-300">
  <iconify-icon icon={icon} width="48" height="48" class="mb-3"></iconify-icon>
  <h3 class="text-lg font-semibold mb-2">{name}</h3>
  <span class={`${levelColors[level]} px-3 py-1 rounded-full text-sm`}>
    {level}
  </span>
</div>