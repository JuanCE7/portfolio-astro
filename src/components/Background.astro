<div class="background-animation">
    <div class="spinners"></div>
  </div>
  
  <style>
    .background-animation {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      z-index: -1;
      overflow: hidden;
      background: linear-gradient(to bottom, #8B0000, #4B0082, #000080);
    }
  
    .spinners {
      position: absolute;
      width: 100%;
      height: 100%;
    }
  
    .spinner {
      position: absolute;
      width: 30px;
      height: 30px;
      background: rgba(255, 255, 255, 0.1);
      backdrop-filter: blur(5px);
      border-radius: 3px;
      animation: fall linear forwards;
    }
  
    @keyframes fall {
      0% {
        transform: translateY(-100px) translateX(-50%);
        opacity: 0;
      }
      10% {
        opacity: 1;
      }
      100% {
        transform: translateY(calc(100vh + 100px)) translateX(50%);
        opacity: 0;
      }
    }
  </style>
  
  <script>
    function createSpinner() {
      const spinner = document.createElement('div');
      spinner.className = 'spinner';
      spinner.style.left = `${Math.random() * 100}%`;
      const duration = Math.random() * 3 + 4; // 4-7 seconds
      spinner.style.animationDuration = `${duration}s`;
      document.querySelector('.spinners').appendChild(spinner);
      
      setTimeout(() => {
        spinner.remove();
      }, duration * 1000);
    }
  
    setInterval(createSpinner, 300);
  </script>