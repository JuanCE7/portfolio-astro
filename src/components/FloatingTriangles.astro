<div class="floating-triangles">
  {
    Array.from({ length: 20 }).map((_, i) => (
      <div class="triangle" style={`--delay: ${i * 0.5}s`} />
    ))
  }
</div>

<style>
  .floating-triangles {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: -1;
    overflow: hidden;
  }

  .triangle {
    position: absolute;
    width: 0;
    height: 0;
    border-left: 20px solid transparent;
    border-right: 20px solid transparent;
    border-bottom: 34.6px solid rgba(255, 255, 255, 0.1);
    animation: float 15s linear infinite;
    animation-delay: var(--delay);
  }

  @keyframes float {
    0% {
      transform: translateY(-100%) rotate(0deg);
      opacity: 0;
      left: random(100);
    }
    10% {
      opacity: 1;
    }
    90% {
      opacity: 1;
    }
    100% {
      transform: translateY(100vh) rotate(360deg);
      opacity: 0;
    }
  }
</style>

<script>
  // Randomly position triangles horizontally
  document.querySelectorAll(".triangle").forEach((triangle) => {
    const randomLeft = Math.random() * 100;
    triangle.style.left = `${randomLeft}%`;
  });
</script>
