---
interface Props {
  title: string;
  description: string;
  imageUrl?: string;
  className?: string;
}

const { title, description, imageUrl, className = "" } = Astro.props;
---

<div class={`bg-white/10 backdrop-blur-lg rounded-lg p-6 shadow-lg ${className}`}>
  {imageUrl && (
    <div class="mb-4">
      <img src={imageUrl} alt={title} class="w-full h-48 object-cover rounded-lg" />
    </div>
  )}
  <h3 class="text-xl font-semibold mb-2">{title}</h3>
  <p class="text-white/80">{description}</p>
</div>