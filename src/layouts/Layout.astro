---
import '@fontsource-variable/outfit';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Francisco Castillo - Personal Portfolio" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="font-outfit bg-gradient-to-b from-gradient-start to-gradient-end min-h-screen text-white">
    <slot />
  </body>
</html>